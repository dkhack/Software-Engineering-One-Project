<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="289dp"
        android:layout_height="275dp"
        android:contentDescription="@string/imageview_logo"
        app:srcCompat="@drawable/launcherlogo"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_goals_calculated"
        android:textSize="22sp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:paddingEnd="25dp"
        android:paddingStart="25dp"
        android:text="@string/textview_placeholder"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_placeholder2"
        android:textSize="22sp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_recalculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_recalculate"
            android:layout_marginStart="15dp"
            android:layout_marginTop="125dp"/>

        <Button
            android:id="@+id/button_finish_setup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_start_tracking"
            android:layout_marginTop="125dp"
            android:layout_marginStart="115dp"/>


    </LinearLayout>

</LinearLayout>