<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:id="@+id/container"
    tools:context=".userDiary.HomeActivity">

    <RelativeLayout
        android:id="@+id/home_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="-5dp"
        android:background="#2A3C25">

        <Button
            android:id="@+id/button_help"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="11dp"
            android:background="@drawable/rounded_button"
            android:text="\?"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/calories_header"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="50dp"
        android:visibility="visible"
        tools:visibility="visible"
        android:background="@android:drawable/dialog_holo_light_frame"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calories_remaining"
        android:textColor="@color/text_color"
        android:layout_marginTop="55dp"
        android:textSize="25sp"
        android:layout_marginStart="25dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="55dp"
        android:gravity="center">

        <!-- Update with user goal calories -->
        <TextView
            android:id="@+id/nutrition_goal"
            android:layout_width="76dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="\-"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/goal_consumed"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:textSize="35sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:text="\="
            android:gravity="center"/>

        <TextView
            android:id="@+id/goal_leftover"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:textSize="35sp" />
        <!-- text="@{String.valueOf(nutritionGoal.getGoalCalories)} -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="120dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calorie_breakdown"
            android:textSize="20sp"
            android:gravity="center"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/footer_menu"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:background="#2A3C25">

        <Button
            android:id="@+id/button_search"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/rounded_button"
            android:text="@string/search"
            android:textColor="#FFFCFC"
            android:textSize="15sp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"/>

        <Button
            android:id="@+id/button_home"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/rounded_button"
            android:text="@string/button_home"
            android:textColor="#FFFCFC"
            android:textSize="15sp"
            android:layout_marginStart="169dp"/>

        <Button
            android:id="@+id/button_profile"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/rounded_button"
            android:text="@string/profile"
            android:textColor="#FFFCFC"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footer_menu"
        android:layout_below="@id/calories_header">

        <LinearLayout
            android:id="@+id/breakfast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp">

            <!-- Breakfast -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/breakfast"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/button_add_breakfast"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/button_add_food"
                    android:layout_marginStart="150dp"
                    android:text="@string/add"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

            </LinearLayout>

            <!-- Insert Breakfast views here -->

            <TextView
                android:id="@+id/default_food_breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_food"
                android:textSize="20sp"/>

            <!-- Lunch -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lunch"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/button_add_lunch"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/button_add_food"
                    android:layout_marginStart="195dp"
                    android:text="@string/add"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

            </LinearLayout>

            <!-- Insert lunch views here -->
            <TextView
                android:id="@+id/default_food_lunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_food"
                android:textSize="20sp"/>

            <!-- Dinner -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dinner"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/button_add_dinner"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/button_add_food"
                    android:layout_marginStart="190dp"
                    android:text="@string/add"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

            </LinearLayout>

            <!-- Enter dinner view to be displayed here -->
            <TextView
                android:id="@+id/default_food_dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_food"
                android:textSize="20sp"/>

<!--            <TextView-->
<!--                android:id="@+id/add_dinner"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"/>-->

            <!-- Snacks -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/snacks"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/button_add_snacks"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/button_add_food"
                    android:layout_marginStart="185dp"
                    android:text="@string/add"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

            </LinearLayout>

            <!-- Enter snacks view to be displayed here -->
            <TextView
                android:id="@+id/default_food_snacks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_food"
                android:textSize="20sp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
